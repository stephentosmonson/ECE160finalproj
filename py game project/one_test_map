pickle_in = open('map1_data.txt','rb')
map_data = pickle.load(pickle_in)

map = Map1(map_data)

run = True
while run:

    screen.blit(bg_img, (0, 0))
    

    map.draw()

    #player.update()


    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False
    
    pygame.display.update()
pygame.quit()